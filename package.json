{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "cz": "cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .js,.ts,.vue --fix",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "dependencies": {
    "@nuxt/eslint": "1.4.1",
    "@nuxt/fonts": "0.11.4",
    "@nuxt/icon": "1.13.0",
    "@nuxt/image": "1.10.0",
    "@nuxt/ui": "3.1.3",
    "@nuxtjs/color-mode": "3.5.2",
    "@tailwindcss/vite": "^4.1.8",
    "eslint": "^9.28.0",
    "flowbite": "^3.1.2",
    "nuxt": "^3.17.4",
    "tailwindcss": "^4.1.8",
    "vue": "^3.5.15",
    "vue-router": "^4.5.1",
    "zod": "^3.25.44"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "daisyui": "^5.0.43",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-perfectionist": "^4.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*.{ts,js,vue,json,md}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  }
